%ここには書体やサイズ周りの設定のみ

%Title
\setbeamerfont{title}{size=\fontsize{25pt}{20pt}\selectfont, series = \bfseries}
\setbeamerfont{subtitle}{size=\Large, series = \mdseries}
\setbeamerfont{date}{size = \footnotesize}
\setbeamerfont{institute}{size = \footnotesize}
\setbeamerfont{author}{size = \large}


%Section
\setbeamerfont{section in toc}{size = \normalsize, series = \bfseries}
\setbeamerfont{subsection in toc}{size = \normalsize, series = \bfseries}
\setbeamerfont{section in toc shaded}{size = \small, series = \mdseries}
\setbeamerfont{subsection in toc shaded}{size = \small, series = \mdseries}


% Block
\setbeamerfont{block title}{size = \small, series = \bfseries}
\setbeamerfont{block body}{size = \small}

\setbeamerfont{block title alerted}{size = \small, series = \bfseries}
\setbeamerfont{block body alerted}{size = \small}

\setbeamerfont{block title example}{size = \small, series = \bfseries}
\setbeamerfont{block body example}{size = \small}


%Enuerate 
\setbeamerfont{enumerate item}{series = \mdseries}
\setbeamerfont{enumerate subitem}{series = \mdseries}


%Text
\setbeamerfont{alerted text}{series = \bfseries}
\setbeamerfont{frametitle}{size = \Large, series = \bfseries}
\setbeamerfont{footnote}{size = \tiny, series = \mdseries}
\setbeamerfont{page number in head/foot}{size = \normalsize}


